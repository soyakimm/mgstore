<!-- 썸네일 등록1 : 게시글 작성 --> 
	<insert id="insertThumbnailContent" >
        INSERT /* EventDAO#insertEventContent() */
          INTO EVENT
        (
          EVE_ID <!-- pk -->
        , EVE_TITILE <!-- 제목 -->
        , EVE_CATE_CODE<!-- 카테고리 코드(진행중, 종료중) -->
        , EVE_START<!-- 이벤트 시작일 -->
        , EVE_END<!-- 이벤트 종료일 -->
        , USER_ID <!-- 이벤트 당첨자 등록 -->
        )
        VALUES 
        (
          EVE_ID_SEQ.NEXTVAL
        , #{ eveTitle }
        , #{ categoryCode }
        , #{ eveStart }
        , #{ eveEnd }
        , #{ user.userId } 
        )
        <selectKey keyProperty="eveId" resultType="Integer" order="AFTER">
        	SELECT
        	       EVE_ID_SEQ.CURRVAL
        	  FROM DUAL
        </selectKey>
	</insert>
	
<!-- 썸네일 등록2 :: SQL 재수정 필요(evethumbNailPath)-->	
	<insert id="insertAttachment" parameterType="com.mgstore.event.model.dto.EveAttachmentDTO">
        INSERT 
          INTO EVENT_ATTACHMENT 
        (
          EVE_IMG_NO <!-- 이벤트 PK -->
        , EVE_ID <!-- 이벤트 게시판 PK/FK -->
        , EVE_ORIGIN_NAME 
        , EVE_SAVED_NAME
        , EVE_SAVE_PATH
        , EVE_FILE_TYPE
        , EVE_THUMBNAIL_PATH
        )
        VALUES 
        (
          SEQ_EVE_IMG_NO.NEXTVAL <!-- 이벤트 PK -->
        , #{ eveId } <!-- EVE_ID의 PK이자 FK -->
        , #{ eveOriginName }
        , #{ eveSavedName }
        , #{ eveSavePath }
        , #{ eveFileType }
        , #{ evethumbNailPath }
        )
	</insert>
	
	
<!-- 이벤트 메인화면 list - select -->

 	<select id="selectEventList" resultMap="selectEventListResultMap">
        SELECT 
               A.EVE_ID
             , A.EVE_TITILE
             , A.EVE_CONTENT
             , B.EVE_CATE_NAME
             , A.USER_ID
             , A.EVE_COUNT
             , A.EVE_CREATE
             , A.EVE_MODDATE
             , D.EVE_IMG_NO
             , D.EVE_ORIGIN_NAME
             , D.EVE_SAVED_NAME
             , D.EVE_SAVE_PATH
             , D.EVE_FILE_TYPE
             , D.EVE_THUMBNAIL_PATH
          FROM EVENT A  <!-- join해서 행의 개수는 Attachemnet 개수에 따라 달라진다. -->
          JOIN EVE_CATEGORY B ON (A.EVE_CATE_CODE = B.EVE_CATE_CODE)
          JOIN TBL_USER C ON (A.USER_ID = C.USER_ID)
          JOIN EVENT_ATTACHMENT D ON (A.EVE_ID = D.EVE_ID)
         WHERE A.EVE_STATUS = 'Y'
           AND D.EVE_IMG_STATUS = 'Y'
           AND D.EVE_FILE_TYPE = 'TITLE' <!--  CHECK제약조건 수정필요? --> 
         ORDER BY A.EVE_ID DESC
	</select>
	

<!-- 이벤트 게시글 조회수 증가(멍개눈) -->
 	<update id="incrementEventCount">
	UPDATE
		  EVENT A
	   SET A.EVE_COUNT = (SELECT B.EVE_COUNT
	     					  FROM EVENT B
	     					 WHERE B.EVE_ID = #{ eveId }
	     				    ) + 1
	  WHERE A.EVE_ID = #{ eveId }
	</update>
	
	<!-- 이벤트 게시판 썸네일  -->
	<select id="selectOneThumbnailEvent" resultMap="thumbnailEventResultMap">
		SELECT /*EventDAO#selectOneThumbnailBoard() */
               A.EVE_ID
             , A.EVE_TITILE
             , A.EVE_CONTENT
             , B.EVE_CATE_NAME
             , A.USER_ID
             , A.EVE_COUNT
             , A.EVE_START<!-- 이벤트 시작일 -->
        	 , A.EVE_END<!-- 이벤트 종료일 -->
             , D.EVE_IMG_NO
             , D.EVE_ORIGIN_NAME
             , D.EVE_SAVED_NAME
             , D.EVE_SAVE_PATH
             , D.EVE_FILE_TYPE
             , D.EVE_THUMBNAIL_PATH
          FROM EVENT A <!-- join해서 행의 개수는 attachemnet 개수에 따라 달라진다. -->
          JOIN EVE_CATEGORY B ON (A.EVE_CATE_CODE = B.EVE_CATE_CODE)
          <!-- JOIN TBL_USER C ON (A.BOARD_WRITER_MEMBER_NO = C.MEMBER_NO) -->
          JOIN EVENT_ATTACHMENT D ON (A.EVE_ID = D.EVE_ID)
         WHERE A.EVE_STATUS = 'Y'
         <!-- AND D.EVE_IMG_STATUS = 'Y'  -->  
           AND A.EVE_ID =  #{ eveId }
	</select>

