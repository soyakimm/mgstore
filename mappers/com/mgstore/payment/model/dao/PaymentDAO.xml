	<select id="selectPaymentList" resultMap="generalProductResultMap">
		SELECT
		       A.PRO_ID,
		       A.PRO_TITLE,
		       A.PRICE,
		       A.DELIVERY_FEE,
		       A.PRO_POINT
		      <!-- B.PIMG_TMBNAME --> 
		  FROM PRODUCT A
		  <!--  JOIN PRO_IMG B ON(A.PRO_ID = B.PRO_ID)-->
		 WHERE A.PRO_ID = #{ proId }
		   AND A.PRO_STATUS = 'Y'
	</select>
	


